{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "isolatedModules": true,
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "outDir": "temp",
    "noUncheckedIndexedAccess": true,
    "declarationDir": "libs",
    "moduleResolution": "node",
    "types": ["node", "svelte"]
  }
}
