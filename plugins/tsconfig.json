{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "isolatedModules": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": false,
    "declaration": true,
    "outDir": "temp",
    "declarationDir": "libs",
    "moduleResolution": "node",
    "types": ["node", "svelte"]
  },
}
